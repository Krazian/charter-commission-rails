<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %>
    </div>
  </div>
  <% @comments.each do |comment| %>
    <div class="row">
      <div class="col-12">
        <table style="width:100%;">
          <tr>
            <td style="vertical-align:top; width:10%;"><b style="text-decoration:underline">Sender:</b></td>
            <td><%= comment.name %> ('<%= comment.email %>')</td>
          </tr>
          <tr>
            <td style="vertical-align:top; width:10%;"><b style="text-decoration:underline">Sent:</b></td>
            <td><%= comment.created_at.in_time_zone('Eastern Time (US & Canada)')%> (EST)</td>
          </tr>
          <tr>
            <td style="vertical-align:top;"><b style="text-decoration:underline">Message:</b></td>
            <td><%= simple_format(comment.message) %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>